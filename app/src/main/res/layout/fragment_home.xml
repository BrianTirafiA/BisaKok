<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment_home">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/PetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Pet"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:textColor="#c2bdfb"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TodayExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Exp:"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:textColor="#c2bdfb"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/PetName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TodayExpCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:textColor="#c2bdfb"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/PetName"
        app:layout_constraintStart_toEndOf="@id/TodayExp" />

    <TextView
        android:id="@+id/TodayExpXP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XP"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:textColor="#c2bdfb"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/PetName"
        app:layout_constraintStart_toEndOf="@id/TodayExpCount" />

    <TextView
        android:id="@+id/TotalExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accumulated Exp:"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:textColor="#c2bdfb"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/TodayExp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TotalExpCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:textColor="#c2bdfb"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/TodayExp"
        app:layout_constraintStart_toEndOf="@id/TotalExp" />

    <TextView
        android:id="@+id/TotalExpXP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XP"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:textColor="#c2bdfb"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/TodayExp"
        app:layout_constraintStart_toEndOf="@id/TotalExpCount" />

    <ImageView
        android:id="@+id/animal"
        android:layout_width="450dp"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_ranimaltni"
        android:contentDescription="Animal Image"
        app:layout_constraintTop_toBottomOf="@id/TotalExp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/Hbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_hungerbar"
        android:contentDescription="HungerBar"
        app:layout_constraintTop_toBottomOf="@id/animal"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>