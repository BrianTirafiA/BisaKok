                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="20dp"
                                            android:text="Bergerak Sejauh 2 KM" />

                                        <Button
                                            android:id="@+id/btnEXP1"
                                            style="@style/Widget.Material3.Button.ElevatedButton"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginBottom="5dp"
                                            android:layout_weight="1"
                                            android:text="Get EXP"
                                            app:backgroundTint="#F2C75B" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/txtProgress1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/montserrat"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="20dp"
                                            android:text="Progress" />

                                        <TextView
                                            android:id="@+id/txtProgressResult1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/montserrat"
                                            android:gravity="center_vertical"
                                            android:paddingRight="20dp"
                                            android:text="2/2"
                                            android:textAlignment="textEnd" />
                                    </LinearLayout>

                                    <com.google.android.material.slider.Slider
                                        android:id="@+id/sliderMission1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="20dp"
                                        android:value="100"
                                        android:valueFrom="0.0"
                                        android:valueTo="100.0"
                                        app:thumbColor="#F2C75B"

                                        android:contentDescription="Slider Progress"
                                        app:trackColor="#FFFFFF" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/transparant_white_stroke"
