                                            android:gravity="center_vertical"
                                            android:paddingRight="20dp"
                                            android:text="2/6"
                                            android:textAlignment="textEnd" />
                                    </LinearLayout>

                                    <com.google.android.material.slider.Slider
                                        android:id="@+id/sliderMission3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="20dp"
                                        android:value="20"
                                        android:valueFrom="0.0"
                                        android:valueTo="60.0"
                                        app:thumbColor="#F2C75B"

                                        app:trackColor="#FFFFFF"
                                        android:contentDescription="Slider Progress"
                                    />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/transparant_white_stroke"
                                    android:baselineAligned="false"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/txtMission4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="20dp"
                                            android:text="Bergerak Sejauh 10 KM" />

                                        <Button
                                            android:id="@+id/btnEXP4"
                                            style="@style/Widget.Material3.Button.ElevatedButton"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginBottom="5dp"
                                            android:layout_weight="1"
                                            android:text="RUN"
                                            app:backgroundTint="#D9D9D9" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/txtProgress4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/montserrat"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="20dp"
                                            android:text="Progress" />

                                        <TextView
                                            android:id="@+id/txtProgressResult4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/montserrat"
                                            android:gravity="center_vertical"
                                            android:paddingRight="20dp"
                                            android:text="3/10"
                                            android:textAlignment="textEnd" />
                                    </LinearLayout>

                                    <com.google.android.material.slider.Slider
                                        android:id="@+id/sliderMission4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="20dp"
                                        android:value="30"
                                        android:valueFrom="0.0"
                                        android:valueTo="100.0"
                                        app:thumbColor="#F2C75B"

                                        app:trackColor="#FFFFFF"
                                        android:contentDescription="Slider Progress"
                                    />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/transparant_white_stroke"
                                    android:baselineAligned="false"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/txtMission5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/montserrat_bold"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="20dp"
                                            android:text="Bergerak Sejauh 2 KM" />

                                        <Button
                                            android:id="@+id/btnEXP5"
                                            style="@style/Widget.Material3.Button.ElevatedButton"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginBottom="5dp"
                                            android:layout_weight="1"
                                            android:text="RUN"
                                            app:backgroundTint="#D9D9D9" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/txtProgress5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/montserrat"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="20dp"
                                            android:text="Progress" />

