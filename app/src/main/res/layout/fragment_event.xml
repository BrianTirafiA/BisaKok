<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B5B9FF"
        tools:context=".view.fragment_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtDailyMission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="DAILY MISSION"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="107dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                tools:layout_editor_absoluteX="30dp"
                                tools:layout_editor_absoluteY="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/white_top_box_account"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/lblCurrentEXP"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/montserrat"
                                        android:text="Mission Completed"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/txtCurrentEXP"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:text="4"
                                        android:textAlignment="center"
                                        android:textSize="34sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="10dp"

                                    android:layout_weight="1"
                                    android:background="@drawable/white_top_box_account"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/lblDailyEXP"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/montserrat"
                                        android:text="Mission In-Progress"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/txtTotalEXP"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:text="1"
                                        android:textAlignment="center"
                                        android:textSize="34sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/white_top_box_account"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/lblTotalScore"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/montserrat"
                                        android:text="Total Score Earned"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/txtTotalScore"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_bold"
                                        android:text="0,07"
                                        android:textAlignment="center"
                                        android:textSize="34sp" />

                                </LinearLayout>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="938dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="30dp"
                                android:orientation="vertical">

                                <LinearLayout
