<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PastelPurple"
    tools:context=".view.ChooseAcc">

    <ImageView
        android:id="@+id/infoButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_info"
        android:contentDescription="Info"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_logo"
        android:contentDescription="logo"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/animalImage"
        android:layout_width="450dp"
        android:layout_height="350dp"
        android:layout_marginBottom="-120dp"
        android:src="@drawable/ic_trimal"
        android:contentDescription="Animal Image"
        app:layout_constraintBottom_toTopOf="@id/whiteback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/whiteback"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_whiteback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="#c2bdfb"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/whiteback"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@id/whiteback"
        app:layout_constraintTop_toTopOf="@id/whiteback" />

    <TextView
        android:id="@+id/Agetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:gravity="center"
        android:text="Age"
        android:textColor="#a19ffc"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/AgeBox"
        app:layout_constraintEnd_toEndOf="@id/whiteback"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@id/whiteback" />

    <EditText
        android:id="@+id/UsernameBox"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toTopOf="@id/emailtext"
        app:layout_constraintEnd_toEndOf="@id/whiteback"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@id/whiteback" />

    <TextView
        android:id="@+id/usertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="233dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Username"
        android:textColor="#a19ffc"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/UsernameBox"
        app:layout_constraintEnd_toEndOf="@id/whiteback"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@id/whiteback" />

    <EditText
        android:id="@+id/AgeBox"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toTopOf="@id/emailtext"
        app:layout_constraintEnd_toEndOf="@id/whiteback"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@id/whiteback" />

    <TextView
        android:id="@+id/emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textColor="#a19ffc"
        android:layout_marginEnd="205dp"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/EmailBox"
        app:layout_constraintStart_toStartOf="@id/whiteback"
        app:layout_constraintEnd_toEndOf="@id/whiteback" />

    <EditText
        android:id="@+id/EmailBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/passtexta"
        app:layout_constraintStart_toStartOf="@id/whiteback"
        app:layout_constraintEnd_toEndOf="@id/whiteback"/>

    <TextView
        android:id="@+id/passtexta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#a19ffc"
        android:layout_marginEnd="235dp"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/PassBox"
        app:layout_constraintStart_toStartOf="@id/whiteback"
        app:layout_constraintEnd_toEndOf="@id/whiteback" />
<!--    aaa-->

    <EditText
        android:id="@+id/PassBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@id/checkpolicy"
        app:layout_constraintEnd_toEndOf="@id/whiteback"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@id/whiteback" />

    <CheckBox
        android:id="@+id/checkpolicy"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/MakeAccButton"
        app:layout_constraintEnd_toEndOf="@id/whiteback"
        app:layout_constraintHorizontal_bias="0.691"
        app:layout_constraintStart_toStartOf="@id/whiteback" />

    <TextView
        android:id="@+id/policytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="I accept the policy and term"
        android:textColor="#a19ffc"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/MakeAccButton"
        app:layout_constraintEnd_toEndOf="@id/whiteback"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="@id/whiteback" />

    <Button
        android:id="@+id/MakeAccButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:backgroundTint="#a19ffc"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintStart_toStartOf="@id/whiteback"
        app:layout_constraintEnd_toEndOf="@id/whiteback"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/petNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Pet Name"
        android:textColor="#a19ffc"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/UsernameBox"
        tools:layout_editor_absoluteX="56dp" />

    <EditText
        android:id="@+id/petNameBox"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/emailtext"
        app:layout_constraintEnd_toEndOf="@id/whiteback"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintStart_toStartOf="@id/whiteback"
        app:layout_constraintTop_toBottomOf="@+id/petNameText"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>